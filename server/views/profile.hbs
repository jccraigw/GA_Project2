<div class='profile-hbs'>
	<div class="profile_header">
		<h3>{{user.name}}</h3>
	</div>	

	<div id='user-info'>
		
		<div class="bio_main">
			<div class="bio_picture">
			<img class="profilePic" src="{{user.image}}" width="90" height="90">	
			</div>
			<div class="bio_right">
				<div class="bio_frieds">
					<a href="/{{user._id}}/friends">Friends</a>
				</div>
				<div class="bio_add_remove"></div>
			</div>
		</div>
		<div class="bio_text">

		</div>
		<div class="bio_border"></div>
	</div>

	<div class="images_wrapper">

		{{#each user.posts}}
		<div class="image_pics">
			<li>


				<a href="/post/{{this._id}}">

					
							<img class="image_post" src="{{this.link}}" width="30" height="30" >
					
						
	
					</a>



			</li>
		</div>

		{{/each}} 
		
		
	
	</div>

	<div class="feed_footer">
		<div class="footer_feed">
			<a href="/feed"><i class="material-icons">home</i></a>
		</div>
		<div class="footer_search">
				<a href="/search"><i class="material-icons">search</i></a>
		</div>
		<div class="footer_upload">
			{{#if current}}
				<form id="imgur">
		  			<br>
		  			<input id="uploadPost" type="file" class="imgur" accept="image/*" data-max-size="5000"/>
		  			<button id="upload"><i class="material-icons">file_upload</i></button>
		  			<br>
		  			<br>
		  			<input id = "userId" value="{{user._id}}" type="hidden" />
				</form>
		{{else}}
		{{/if}}

		</div>
		<div class="footer_profile">
			<a href="/{{userid}}"><i class="material-icons">person</i></a>
		</div>
		<div class="footer_logout">
			<a href='/logout'><i class="material-icons">close</i></a>
		</div>
	</div>


			
</div>	


