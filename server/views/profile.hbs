<div id='profile-hbs'>

		<div class="hamburger" title="Open Navigation"></div>
		<div class="title">
			<h1 id='puppy-gram-title'>Wanderlyst</h1>
		</div>
		<nav class='nav-dropdown'>

			<li><a href="http://localhost:3000/feed">Feed</a></li>{{!-- //need to update to send to user profile --}}
			{{#if current}}
			{{else}}
			<li><a href="http://localhost:3000/{{userid}}">Profile</a></li> 
			{{/if}}
			<li><a href='http://localhost:3000/logout'>Logout</a></li> 

		</nav>
<h1>{{user.name}}</h1>

{{#if current}}
{{else}}
	<div id='button-container'>
			<input id = "userId" value="{{user._id}}" type="hidden" />
			<button id="add" class='profile-button'>Add</button>
			<button id="remove" class='profile-button'>Unfriend</button>

	</div>
{{/if}}



<div id='user-info'>

		<div class="profile_wrapper">
			<div class="profile_image">
				<img id="profilePic" src="{{user.image}}" width="200" height="200">	
			</div>
			<div id='bio-wrapper'>
			<br>
			<p>Lives in {{user.location}}</p>

			<p>{{user.bio}}</p>

			<a href="http://localhost:3000/{{user._id}}/friends">Friends</a>
			</div>
			{{#if current}}
			<div class="gear_background">
				<div class="profile_gear">
					
						<form class='join_form'>
				  			<br>
				  			{{!-- <a id='upload-text'>Upload Profile Picture: --}} 
				  			<input id='profileImage' type="file" class="imgur" accept="image/*" data-max-size="10000"/>
						</form>
						<span id="gear">&#9881;</span>
					{{else}}
					{{/if}}
				</div>
			</div>
		</div>
		
		<br>

	
		
		
</div>

		{{#if current}}
			<form id="imgur">



		<form id="imgur">
  			

  			<br>
  			<input id="uploadPost" type="file" class="imgur" accept="image/*" data-max-size="5000"/>
  			<button id="upload">Upload</button>
  			<br>
  			<br>
  			<input id = "userId" value="{{user._id}}" type="hidden" />
		</form>
		{{else}}
	
		{{/if}}
		<div class="user-images_wrapper">
		<ul id='user-images'>
		
		{{#each user.posts}}
			<li>
				<div class="postImage_wrapper">
				<a href="http://localhost:3000/post/{{this._id}}">
				<div class="post_wrapper">
					<img class="image_post" src="{{this.link}}" width="200" height="200">
				</div>
				
				<button class="like">Like</button>
				<span class="like_num">{{this.likes}}</span>

				</a>

				</div>
				{{!-- pull description from post collection --}}
				
				
				{{!-- use static form to send patch request --}}
				
				{{#if ../current}}
					<div class="edit_wrapper">
						<form class="descr">
							<input class="description" type="text" />
						</form>
						<button class="descriptionEdit_toggle">Edit</button>
						<input class = "postId" value="{{this._id}}" type="hidden" />
						<button class="descriptionAdd_toggle">Add</button>

					</div>
				{{else}}
					
				{{/if}}
			</li>
		{{/each}}

		</ul>
		</div>
</div>
